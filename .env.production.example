# ICPAC Booking System - Production Environment Configuration
# Copy this file to .env.production and update the values

# ===== SECURITY SETTINGS =====
SECRET_KEY=your-super-secret-django-key-here-generate-a-new-one
DEBUG=False

# ===== DATABASE CONFIGURATION =====
POSTGRES_DB=icpac_bookings
POSTGRES_USER=icpac_user
POSTGRES_PASSWORD=your-secure-database-password-here

# ===== REDIS CONFIGURATION =====
REDIS_PASSWORD=your-secure-redis-password-here

# ===== DOMAIN & SSL SETTINGS =====
DOMAIN_NAME=booking.icpac.net
ALLOWED_HOSTS=localhost,127.0.0.1,booking.icpac.net
FRONTEND_URL=https://booking.icpac.net
SSL_EMAIL=admin@icpac.net

# ===== EMAIL CONFIGURATION =====
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@icpac.net

# ===== BACKUP SETTINGS =====
BACKUP_KEEP_DAYS=7

# ===== OPTIONAL: EXTERNAL SERVICES =====
# SENTRY_DSN=https://your-sentry-dsn-here
# CLOUDFLARE_API_KEY=your-cloudflare-api-key
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret

# ===== MONITORING =====
# POSTGRES_EXPORTER_PASSWORD=your-monitoring-password